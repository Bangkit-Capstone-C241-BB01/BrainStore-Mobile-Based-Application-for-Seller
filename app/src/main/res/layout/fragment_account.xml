<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.account.AccountFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_profile"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/seller_img"
        android:scaleType="centerCrop"
        android:src="@color/primary_navy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/change_image_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_rounded"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/change_image"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_profile"
        tools:ignore="VisualLintButtonSize" />

    <TextView
        android:id="@+id/seller_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/input_seller_name"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/change_image_btn"
        app:layout_constraintStart_toStartOf="@+id/change_image_btn"
        app:layout_constraintTop_toBottomOf="@+id/change_image_btn" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_seller_name_layout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="@+id/seller_name"
        app:layout_constraintStart_toStartOf="@+id/seller_name"
        app:layout_constraintTop_toBottomOf="@+id/seller_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_seller_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/brain_store"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="@color/disable"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/store_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/input_store_name"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/input_seller_name_layout"
        app:layout_constraintStart_toStartOf="@+id/input_seller_name_layout"
        app:layout_constraintTop_toBottomOf="@+id/input_seller_name_layout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_store_name_layout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="@+id/store_name"
        app:layout_constraintStart_toStartOf="@+id/store_name"
        app:layout_constraintTop_toBottomOf="@+id/store_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_store_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/brain_store"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="@color/disable"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/store_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/input_email"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/input_store_name_layout"
        app:layout_constraintStart_toStartOf="@+id/input_store_name_layout"
        app:layout_constraintTop_toBottomOf="@+id/input_store_name_layout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_store_email_layout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="@+id/store_email"
        app:layout_constraintStart_toStartOf="@+id/store_email"
        app:layout_constraintTop_toBottomOf="@+id/store_email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_store_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/brain_store_email"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="@color/disable"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/store_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/phone_number"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/input_store_email_layout"
        app:layout_constraintStart_toStartOf="@+id/input_store_email_layout"
        app:layout_constraintTop_toBottomOf="@+id/input_store_email_layout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_store_phone_layout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="@+id/store_name"
        app:layout_constraintStart_toStartOf="@+id/store_phone"
        app:layout_constraintTop_toBottomOf="@+id/store_phone">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_store_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/phone_braincore"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="@color/disable"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/store_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/store_address"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/input_store_phone_layout"
        app:layout_constraintStart_toStartOf="@+id/input_store_phone_layout"
        app:layout_constraintTop_toBottomOf="@+id/input_store_phone_layout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_store_address_layout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="@+id/store_name"
        app:layout_constraintStart_toStartOf="@+id/store_address"
        app:layout_constraintTop_toBottomOf="@+id/store_address">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_store_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/address_braincore"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="@color/disable"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_edit_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_stroke"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/edit_data"
        android:textColor="@color/primary_navy"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/input_store_address_layout"
        app:layout_constraintStart_toStartOf="@+id/input_store_address_layout"
        app:layout_constraintTop_toBottomOf="@+id/input_store_address_layout"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>